  --save-txt \
  --save-conf \
  --save-crop \
  --project runs/detect \
  --name gen4_analysis \
  --exist-ok

import glob
from IPython.display import HTML
from base64 import b64encode

output_videos = glob.glob('runs/detect/gen4_analysis/*.mp4')
if output_videos:
    video_path = output_videos[0]
    mp4 = open(video_path, 'rb').read()
    data_url = "data:video/mp4;base64," + b64encode(mp4).decode()
    display(HTML(f'<video width=720 controls><source src="{data_url}" type="video/mp4"></video>'))
else:
    print("‚ùå Output video not found. Check if detection ran successfully.")
